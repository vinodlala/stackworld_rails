<% content_for :title do  %>
  Edit an Item
<% end %>

<p>Here you can edit items</p>

<%= simple_form_for @item, :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :image_url %>
  <%= f.input :description %>
  <%= f.input :x_coord %>
  <%= f.input :y_coord %>
  <%= f.button :submit %>
<% end %>
